    <Window x:Class="Knot_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knot_Simulator"
        mc:Ignorable="d"
        Title="Knot Simulator" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="SimulationTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=SimulationId}" Width="45" />
                <TextBlock Text="{Binding Path=ConfigurationId}" Width="170" />
                <Button Content="Cancel" Click="listboxRemoveSimulation_Click"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
        
    <Grid>
        <StackPanel>
            <Grid>
                <ComboBox x:Name="ConfListCombobox" Width="300" Height="25" HorizontalAlignment="Left" Margin="25, 15, 25, 10" 
                          DisplayMemberPath="ConfigurationId" 
                          SelectedValuePath="ConfigurationId" SelectedValue="{Binding SelectedCon, Mode=TwoWay}"
                          />
                <Button x:Name="startSimulation" Width="120" Height="25" Margin="380, 15, 0, 10" BorderThickness="0" HorizontalAlignment="Left"
                        Click="startSimulation_Click">Start Simulation</Button>
            </Grid>
            <Grid>
                <Label Width="300" Height="25" Margin="25, 0, 25, 0" HorizontalAlignment="Left">Simulation List</Label>
                <Label Width="400" Height="25" Margin="25, 0, 25, 0" HorizontalAlignment="Right">Status</Label>
            </Grid>
            <Grid>
                <ListBox x:Name="simulationListbox" Width="300" Height="300" Margin="25, 5, 25, 5" HorizontalAlignment="Left" 
                         ScrollViewer.VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#e9e9e9"
                         IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" ItemTemplate="{StaticResource SimulationTemplate}"
                         />
                <ListBox x:Name="statusListbox" Width="400" Height="300" Margin="25, 5, 25, 5" HorizontalAlignment="Right" 
                         ScrollViewer.VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#e9e9e9"/>
            </Grid>

