<Window x:Class="DataTransferA3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataTransferA3"
        mc:Ignorable="d"
        Title="A3 SQL Data Transfer Utility" Height="450" Width="800">
    <Grid>
        
        <StackPanel Margin="25">
            <Grid>
                <Button Name="Source" Content="Source Data Link" Width="150" Height="45" Margin="0,15,50,15" BorderThickness="0" HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="DataLinkDialButton_Click"/>
                <StackPanel>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Source Server :" Margin="0,5,0,5" />
                        <Border  Width="380" Margin="0" Background="#e9e9e9" CornerRadius="3" Padding="3" HorizontalAlignment="Right">
                            <TextBlock Name="SourceServer" Width="370" Margin="0,2,0,2" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Source Database :" Margin="0,5,0,5" />
                        <Border  Width="380" Margin="0" Background="#e9e9e9" CornerRadius="3" Padding="3" HorizontalAlignment="Right">
                            <TextBlock Name="SourceDB" Width="370" Margin="0,2,0,2" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Source table :" Margin="0,5,0,5"/>
                        <TextBox Name="SourceTable" Width="377" Margin="150,2,2,2" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

            </Grid>

            <Grid>
                <Button Name="Destination" Content="Destination Data Link" Width="150" Height="45" Margin="0,15,50,15" BorderThickness="0" HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="DataLinkDialButton_Click"/>
                <StackPanel>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Destination Server :" Margin="0,5,0,5" />
                        <Border  Width="380" Margin="0" Background="#e9e9e9" CornerRadius="3" Padding="3" HorizontalAlignment="Right">
                            <TextBlock Name="DestinationServer" Width="370" Margin="0,2,0,2" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Destination Database :" Margin="0,5,0,5" />
                        <Border  Width="380" Margin="0" Background="#e9e9e9" CornerRadius="3" Padding="3" HorizontalAlignment="Right">
                            <TextBlock Name="DestinationDB" Width="370" Margin="0,2,0,2" HorizontalAlignment="Right"/>
                        </Border>
                    </Grid>
                    <Grid Margin="200,3,0,3">
                        <TextBlock Text="Source Table :" Margin="0,5,0,5"/>
                        <TextBox Name="DestinationTable" Width="377" Margin="150,2,2,2" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
                
            </Grid>

            <Button Name="Transfer" Content="Transfer" Width="150" Height="45" Margin="0,10,0,10" BorderThickness="0"
                        VerticalAlignment="Top" Click="TransferClick"/>
            <Border  Height="130" Margin="0" Background="#e9e9e9" CornerRadius="3" Padding="3">
                <TextBlock Name="StatusMessage" Height="130" Foreground="Red" FontSize="11" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
